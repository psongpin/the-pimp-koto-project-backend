{
  "name": "the-pimp-koto-project-backend",
  "version": "1.0.0",
  "description": "This project was bootstrapped with Fastify-CLI.",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "dev": "pnpm build:ts && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"pnpm:watch:ts\" \"pnpm:dev:start\"",
    "dev:start": "fastify start --ignore-watch=.ts$ -w -l info -p 8000 -P dist/app.js",
    "start": "pnpm build:ts && fastify start -l info -p 8000 dist/app.js",
    "test": "pnpm build:ts && tsc -p test/tsconfig.json && c8 node --test -r ts-node/register \"test/**/*.ts\"",
    "lint": "eslint . --ext ts,tsx,js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx,js,jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d --build",
    "docker:dev:stop": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:dev:clean": "docker-compose -f docker-compose.dev.yml down -v",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d --build",
    "docker:prod:stop": "docker-compose -f docker-compose.prod.yml down",
    "docker:prod:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "docker:prod:clean": "docker-compose -f docker-compose.prod.yml down -v",
    "better-auth:generate": "pnpm dlx @better-auth/cli@latest generate",
    "drizzle-kit:generate": "drizzle-kit generate",
    "drizzle-kit:migrate": "drizzle-kit migrate",
    "drizzle-kit:studio": "drizzle-kit studio",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^6.0.0",
    "@fastify/sensible": "^6.0.0",
    "better-auth": "^1.3.34",
    "drizzle-orm": "^0.44.7",
    "fastify": "^5.0.0",
    "fastify-cli": "^7.4.0",
    "fastify-plugin": "^5.0.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.1.0",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "c8": "^10.1.2",
    "concurrently": "^9.0.0",
    "drizzle-kit": "^0.31.6",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "fastify-tsconfig": "^3.0.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "ts-node": "^10.4.0",
    "typescript": "~5.8.2"
  }
}
